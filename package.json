{
  "name": "ecmascript-playground",
  "private": true,
  "version": "0.0.1",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-3": "^6.5.0",
    "esformatter": "^0.10.0"
  },
  "scripts": {
    "build:es6": "babel stage --out-dir es6 --presets stage-3 && npm run beautify",
    "build:es5": "babel stage --out-dir es5 --presets es2015,stage-3 && npm run beautify",
    "beautify": "esformatter -i 'es6/**/*.*' && esformatter -i 'es5/**/*.*'"
  },
  "author": "Marcin Mazurek <marcin@mazurek.pro>",
  "license": "GPL"
}
